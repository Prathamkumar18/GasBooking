<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Update">
    <ImageView
        android:id="@+id/ivupper"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/upper"
        android:scaleType="centerCrop"
        />
    <EditText
        android:id="@+id/uid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivupper"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="   Enter your c.id (till '-')"
        android:gravity="left"
        android:textColorHint="#595454"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="#7D88CD"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:background="@drawable/edit_text_border"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/lllogin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/uid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/arbutus"
            android:text="Change Your Password?"
            android:textColor="#177687"
            android:textSize="23sp" />


        <EditText
            android:id="@+id/upass"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="   Enter New Password"
            android:gravity="left"
            android:inputType="textPassword"
            android:textColor="#7D88CD"
            android:textColorHint="#595454"
            android:padding="10dp"
            android:textSize="25sp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:background="@drawable/edit_text_border"
            />
        <Button
            android:id="@+id/ubtn"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:textColor="#235BBC"
            android:text="Update Password"
            android:layout_marginLeft="80dp"
            android:background="@drawable/edit_text_border"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/arbutus"
            android:layout_marginTop="20dp"
            android:text="DELETE your account?"
            android:textColor="#177687"
            android:textSize="23sp" />
        <Button
            android:id="@+id/dbtn"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:backgroundTint="#E61919"
            android:text="DELETE"
            android:layout_marginLeft="80dp"
            android:background="@drawable/edit_text_border"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="420dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/lllogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/kk"
        android:scaleType="centerCrop"
        />
</androidx.constraintlayout.widget.ConstraintLayout>